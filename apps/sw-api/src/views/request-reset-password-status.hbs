<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Reset Password</title>
    <link rel="stylesheet" href="/public/request-reset-password.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  </head>
  <body>
    <div class="container">
      <h1>Reset Password</h1>
      <p class="description">Enter your new password below.</p>
      <form action="/admin/reset-password" method="post">
        <input type="hidden" name="token" value="{{token}}" />
        <input type="hidden" name="email" value="{{email}}" />

        <div class="password-container">
          <input type="password" id="password" name="password" placeholder="Password" required />
          <span class="toggle-password" data-target="password">
            <i class="fas fa-eye"></i>
          </span>
        </div>

        <div class="password-container">
          <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required />
        </div>

        <button type="submit">Reset Password</button>
      </form>

      {{#if success}}
        <p class="success">Password reset successfully. <a href="/login">Login</a></p>
      {{/if}}
      {{#if error}}
        <p class="error">{{error}}</p>
      {{/if}}
    </div>

    <script src="/public/request-reset-password.js"></script>
  </body>
</html>