{
  "name": "shortwaits-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/shortwaits-backend/src",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/shortwaits-backend",
        "main": "apps/shortwaits-backend/src/main.ts",
        "tsConfig": "apps/shortwaits-backend/tsconfig.app.json",
        "assets": ["apps/shortwaits-backend/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "apps/shortwaits-backend/webpack.config.js"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/shortwaits-backend/src/environments/environment.ts",
              "with": "apps/shortwaits-backend/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "shortwaits-backend:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "shortwaits-backend:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/shortwaits-backend/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/shortwaits-backend"],
      "options": {
        "jestConfig": "apps/shortwaits-backend/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "seed": {
      "executor": "@nx/workspace:run-commands",
      "configurations": {
        "default-data": {
          "commands": [
            "DEBUG=mongo-seeding node apps/shortwaits-backend/scripts/seeds/default-data.js"
          ]
        }
      }
    }
  },
  "tags": []
}
