{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/shortwaits-backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/shortwaits-backend",
        "main": "apps/shortwaits-backend/src/main.ts",
        "tsConfig": "apps/shortwaits-backend/tsconfig.app.json",
        "assets": ["apps/shortwaits-backend/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/shortwaits-backend/src/environments/environment.ts",
              "with": "apps/shortwaits-backend/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "shortwaits-backend:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "shortwaits-backend:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/shortwaits-backend/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/shortwaits-backend"],
      "options": {
        "jestConfig": "apps/shortwaits-backend/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "seed": {
      "executor": "@nrwl/workspace:run-commands",
      "configurations": {
        "default-data": {
          "commands": [
            "DEBUG=mongo-seeding ts-node apps/shortwaits-backend/src/scripts/seed-default-data.mjs --project"
          ]
        }
      }
    }
  },
  "tags": []
}
